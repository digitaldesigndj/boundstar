extends layout

block content
  //- p=JSON.stringify(voters)
  //- p=JSON.stringify(profiles)
  //- p Panel View
  //- .col-sm-12
    a(href='/') &laquo; Return Home
    .page-header
      h2 #{title}
      p #{voters.month} - #{voters.name} - #{voters.address}
  //- each vote in voters.voters
    .col-xs-6.col-sm-6.col-md-4.col-lg-3
      - var exported = false;
      each user, i in profiles
        if vote.nickname == user.player
          - exported = true;
          h3(class='#{user.rank.toLowerCase()}') #{user.player}
      if !exported
        h3 #{vote.nickname}
      p #{vote.votes} votes

  .col-md-8.col-lg-6
    a(href='/') &laquo; Return Home
    .page-header
      h2 #{title}
      p #{voters.month} - #{voters.name} - #{voters.address}
    table#visits.table.table-bordered.table-striped.table-condensed
      thead
        tr
          td
            strong Nickname
          td
            strong Votes
      tbody
        each vote in voters.voters
          tr
            - var exported = false;
            each user, i in profiles
              if vote.nickname == user.player
                - exported = true;
                td 
                  a(href='/player/#{vote.nickname}', class='#{user.rank.toLowerCase()}') #{user.player}
            if !exported
              td #{vote.nickname}
            td #{vote.votes} votes

