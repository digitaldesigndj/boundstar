extends layout

block content
  .page-header
    h1 Welcome to Boundstar
  p Be sure to make your forum account, set your name and rank yourself up to player!
  br
  .col-sm-2
    form(action='https://www.paypal.com/cgi-bin/webscr'. method='post'. target='_top')
      input(type='hidden', name='cmd', value='_s-xclick')
      input(type='hidden', name='hosted_button_id', value='9HGYPBBJV8954')
      input(type='image', src='https://www.paypalobjects.com/en_US/i/btn/btn_donate_LG.gif', border='0', name='submit', alt='PayPal - The safer, easier way to pay online!')
      img(alt='', border='0', src='https://www.paypalobjects.com/en_US/i/scr/pixel.gif', width='1', height='1')
  .col-sm-2
    a(href='/signup').btn.btn-primary Register
  .col-sm-2
    a(href='/forum.boundstar.com').btn.btn-primary Forums
  .col-sm-4
    script(src='http://starbound-servers.net/embed.js?id=313&type=votes&size=small')
  .clearfix
  //- p=JSON.stringify(servers)
  //- p=JSON.stringify(admins)
  if user
    if user.profile.player
      .page-header
        h1 Hello #{user.profile.player}
      h4 Your Rank is 
        strong #{user.profile.rank}
      //- .row
        .well.col-sm-2#connections
            h3 Right Now
            p 
              span#numOnline
            h5 active players
        .col-sm-10
          legend Rank
          table#visits.table.table-bordered.table-striped.table-condensed
            thead
              tr
                td #{user.profile.rank}
            tbody
          legend Worlds
          table#pageViews.table.table-bordered.table-striped.table-condensed
            thead
              tr
                td Sector
                td Coordinates
            tbody
    else
      h1 Go to your 
        a(href='/account') profile
        |  and set your player name!

  if servers
    div
      .page-header
        h2 Servers
      each server, i in servers
        if admins[i].starbound_password === ''
          .col-sm-4
            case server.ip_address
              when '107.170.30.45'
                img(src='http://starrydex.com/img/ApeFlu.svg' style='max-width:100%;')
              when '107.170.56.96'
                img(src='http://starrydex.com/img/BoundStar.svg' style='max-width:100%;')
              when '107.170.45.151'
                img(src='http://starrydex.com/img/Crash.svg' style='max-width:100%;')
              default
                img(src='http://starrydex.com/img/TinyTower.svg' style='max-width:100%;')
            .page-header
              h2 #{server.ip_address}
            p Public
            if server.size_id == '61'
              p 8 core server
            else
              p 2 core server
              //- p #{info[i].playersOnline.length} Players Online
              //- p Game Port: #{info[i].gamePort}
            if server.ip_address == '107.170.56.96'
              p(style='color:black')
                input(value='boundstar.com',style='width:120px;',onclick='this.select()')
            else
              p(style='color:black')
                input(value='#{server.ip_address}',style='width:120px;',onclick='this.select()')
            if server.ip_address == '107.170.56.96'
              p
                a(href='http://boundstar.com/') Web Site
            p
              a(href='http://#{server.ip_address}') CommandStar
